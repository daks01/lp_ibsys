---
import Dialog from "../ui/Dialog.astro";
import FormVacancy from "./FormVacancy.astro";
import OfficeGallery from "./OfficeGallery.astro";

const { position, ...props } = Astro.props;
---

<Dialog {...props}>
  <slot />

  <OfficeGallery />
  <FormVacancy
    position={position}
    aria-label={`Форма отправки резюме на должность ${position}`}
  />
</Dialog>

<style>
  @import "/src/assets/css/_custom-media.css";

  @media screen and (--screen-phone) {
  }
</style>

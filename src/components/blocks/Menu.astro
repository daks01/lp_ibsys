---
const { ...props } = Astro.props;
---

<ul class="menu" {...props}>
  <li class="menu__item">
    <a href="/#about-us" class="menu__link active">Компания</a>
  </li>
  <li class="menu__item">
    <a href="/#full-dev-cyrcle" class="menu__link">Полный цикл</a>
  </li>
  <li class="menu__item">
    <a href="/#what-we-do" class="menu__link">Направления работы</a>
  </li>
  <li class="menu__item">
    <a href="/#clients" class="menu__link">Клиенты</a>
  </li>
  <li class="menu__item">
    <a href="/#career" class="menu__link">Карьера</a>
  </li>
  <li class="menu__item">
    <a href="/#contact-form" class="menu__link">Контакты</a>
  </li>
  <li class="menu__item"><slot name="last" /></li>
</ul>

<style>
  @import "/src/assets/css/_custom-media.css";

  .menu {
    padding: 0;
    margin: 0;
    display: flex;
    align-items: baseline;
  }
  .menu__item {
    list-style-type: none;
    padding: 0;
    margin: 0 var(--20px);
    &:empty {
      display: none;
    }
  }
  .menu__link {
    text-decoration: none;
    font-size: var(--text-font-size);
    color: currentColor;
    &.active {
      text-decoration: underline;
      text-underline-offset: var(--8px);
      text-decoration-thickness: var(--2px);
    }
    &:hover {
      text-decoration: underline;
      text-underline-offset: var(--8px);
      text-decoration-thickness: var(--1px);
      cursor: pointer;
    }
  }

  @media screen and (--screen-phone) {
    .menu {
      flex-direction: column;
      gap: var(--24px);
    }
    .menu__item {
      margin: 0;
      width: 100%;
    }
    .menu__link {
      font-size: var(--20px);
    }
  }
</style>
